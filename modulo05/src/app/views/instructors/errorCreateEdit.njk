{%extends 'layout.njk'%}

{% block content %}
<main>
    <section class="content">
        <div class="card error-page">
            <div class="error-lottie"></div>
            <div class="info">
                <h3>Erro ao tentar cadastrar ou editar instrutor.</h3>
                <a href="#" onclick="history.back()">Tente novamente</a>
            </div>
        </div>
    </section>
    <script src="/lottie.min.js"></script>
    <script>
        const element = document.querySelector('.error-lottie');
        lottie.loadAnimation({
            container: element, // the dom element that will contain the animation
            renderer: 'svg',
            loop: false,
            autoplay: true,
            path: '/14651-error-animation.json' // the path to the animation json
        });
    </script>
</main>
{% endblock content %}