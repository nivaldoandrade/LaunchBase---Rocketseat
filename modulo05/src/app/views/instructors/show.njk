{% extends "layout.njk" %}

{% block content %}
    <main>
        <section class="content">
            <div class="card">
                <div class="avatar" style="background: url({{ instructor.avatar_url }}) no-repeat center center / cover"></div>
                <div class="details">
                    <h1>Detalhes</h1>
                    <div class="item">
                        <h5>Instrutor</h5>
                        <p>{{ instructor.name}}</p>
                    </div>
                    <div class="item">
                        <h5>Idade</h5>
                        <p>{{ instructor.age }} anos</p>
                    </div>
                    <div class="item">
                        <h5>Sexo</h5>
                        <p>{{ "MASCULINO" if instructor.gender == "M" else "FEMININO" }}</p>
                    </div>
                    <div class="item">
                        <h5>Acompanhamento</h5>
                        {% for service in instructor.services %}
                        <span>{{ service }}</span>
                        {% endfor %}
                    </div>
                    <div class="item">
                        <h5>Desde</h5>
                        <p>{{ instructor.created_at }}</p>
                    </div>
                    <a href="/instructors/{{instructor.id}}/edit" class="button">Editar</a>
                </div>
            </div>
        </section>
   </main>
{% endblock %}