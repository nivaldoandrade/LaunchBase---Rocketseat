    <div class="item">
        <h5>Avatar URL</h5>
        <input 
        type="url" 
        name="avatar_url" 
        placeholder="https://"
        value="{{ instructor.avatar_url }}">
    </div>
    <div class="item">
        <h5>Instrutor</h5>
        <input 
        type="text" 
        name="name" 
        placeholder="Nome do instrutor"
        value="{{ instructor.name }}">
    </div>
    <div class="item">
        <h5>Data de Nascimento</h5>
        <input 
        type="date" 
        name="birth"
        value="{{ instructor.birth }}">
    </div>
    <div class="item radio">
        <h5>Sexo</h5>
        <span>
            <input 
            type="radio" 
            name="gender" 
            value="M" 
            {% if instructor.gender == "M" %}
                checked
            {% endif %} >
            <label for="gender">Masculino</label>
        </span>
        <span>
            <input 
            type="radio" 
            name="gender" 
            value="F"
            {% if instructor.gender == "F" %}
                checked
            {% endif %}>
            <label for="gender">Feminino</label>
        </span>
    </div>
    <div class="item">
        <h5>Serviços</h5>
        <input 
            type="text" 
            name="services" 
            placeholder="Serviços separado por VIRGULA"
            value="{{ instructor.services }}">
    </div>
    <button type="submit" onclick="Validator.allFields(event)">Salvar</button>
