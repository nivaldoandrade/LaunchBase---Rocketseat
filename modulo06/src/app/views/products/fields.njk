<div class="item">
    <div>Categoria</div>
    <select name="category_id">
    {% for category in categories %}
        <option value="{{ category.id }}" 
        {% if category.id == product.category_id %}selected{% endif %}>
        {{ category.name }}
        </option>
    {% endfor %}
    </select>
</div>
<div class="item">
    <div>Nome</div>
    <input 
    type="text"
    name="name"
    placeholder="Título do Produto"
    value="{{ product.name }}"
    >
</div>
<div class="item">
    <div>Descrição</div>
    <textarea name="description">{{ product.description }}</textarea>
</div>
<div class="item">
    <div>Fotos</div>
    <div>
        <div id="photos-upload">
            <input
                type="file" 
                name="photos" 
                id="photos-input"
                multiple
                accpet="image/*"
                value='ok';
                onChange="PhotosUpload.handleFileInput(event)"
            >
            <label for="photos">Selecione até 6 Fotos</label>
        </div>
        <div id="photos-preview">
        {% if files %} 
            {% for image in files %}  
            <div class="photos" id={{ image.id }} value='false'>
                <img src="{{ image.src }}" alt="{{ image.name }}">
                <a onClick="PhotosUpload.addFetuaredImg(event)">Imagem de destaque</a>
                <i class="material-icons" onClick="PhotosUpload.removeFile(event)">close</i>   
            </div>
            {% endfor %}
        {% endif %}
        <input type="hidden" name="remove_files">
        <input type="hidden" name="image_fetuared">
        </div>
    </div>
</div>
<div class="item">
    <div>Valor</div>
    <input 
    type="text"
    name="price"
    placeholder="Preço do produto"
    value="{{ product.price }}"
    onkeydown="Mask.apply(this, 'formatBRL')">
    {% if product.old_price %} 
    <input type="hidden" name="old_price" value="{{ product.old_price }}">
    {% endif %}
</div>
<div class="item">
    <div>Quantidade</div>
    <input 
    type="number"
    name="quantity"
    placeholder="Quantidade em estoque"
    value="{{ product.quantity }}">
</div>
{% if product.status == '1' or product.status == 0 %}
<div class="item">
    <div>Disponivel</div>
    <div>
        <span>
            <input 
            type="radio"
            name="status"
            value="1"
            {% if product.status == '1' %} checked {% endif %}>
            SIM
        </span>
        <span>
            <input 
            type="radio"
            name="status"
            value="0"
            {% if product.status == '0' %} checked {% endif %}>
            NÃO
        </span>
    </div>
</div>
{% endif %}