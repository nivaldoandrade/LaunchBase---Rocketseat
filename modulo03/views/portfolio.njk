{% extends "layout.njk" %}

{% block head %}
<link href="https://fonts.googleapis.com/icon?family=Material+Icons"
rel="stylesheet">
<title>Portfolio - Nivaldo Andrade</title>
{% endblock %}

{% block content %}

    <div id="wrapper">
        <h1>Aulas</h1>
    </div>

    <section class="cards">

        {% for item in items %}

            <div class="card" id="{{item.id}}">
                <div class="card__image-container {{ 'feature-wrapper' if item.feature }}">
                    <img src="https://img.youtube.com/vi/{{item.id}}/maxresdefault.jpg" alt="Imagem do {{item.tittle}}">
                    {% if item.feature %}
                    <div class="feature">Feature</div>
                    {% endif %}
                </div>
                <div class="card__content">
                    <p>{{item.tittle}}</p>
                </div>
                <div class="card__info">
                    <p class="card__time">{{item.duration}}</p>
                    <p class="card__price">{{item.price}}</p>
                </div>
            </div><!--card-->

        {% endfor %}

    </section><!--cards-->
    <script src="scripts.js"></script>

{% endblock %}