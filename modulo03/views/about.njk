{% extends "layout.njk" %}

{% block head %}
<link href="/styles1.css" rel="stylesheet">
<title>Sobre - {{ about.name }}</title>
{% endblock %}

{% block content %}
    <div id="wrapper">
        <img src="{{ about.avatar_url }}">
        <h1>{{ about.name }}</h1>
        <h2>{{ about.role }}</h2>
        <p>{{ about.description }}</p>
    </div>
        <div id="links-footer" class="links">
            {% for link in about.links %}
            <a href="{{ link.link_url}}" target="_blank">{{ link.name }}</a>
            {% endfor %}
        </div>
{% endblock %}