{% extends "layout.njk" %}

{% block content %}
    <main>
        <section class="content">
            <div class="card table-container">
            <a href="/teachers/create">CREATE</a>
                <table width="100%">
                    <thead>
                        <tr>
                            <th>Teachers</th>
                            <th>Services</th>
                            <th>Ação</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for teacher in teachers %}
                            <tr>
                                <td>
                                    <div class="table-imgname">
                                        <span style="background-image:url({{ teacher.avatar_url }})"></span>
                                        {{ teacher.name }}
                                    </div>
                                </td>
                                <td>
                                    {% for service in teacher.services %}
                                        <span>{{ service }}</span>
                                    {% endfor %}
                                </td>
                                <td><a href="/teachers/{{ teacher.id}}">VER</a></td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </section>
    </main>
{% endblock %}}