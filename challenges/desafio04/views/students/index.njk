{% extends "layout.njk" %}

{% block content %}
    <main>
        <section class="content">
            <div class="card table-container">
            <a href="/students/create">CREATE</a>
                <table width="100%">
                    <thead>
                        <tr>
                            <th>Students</th>
                            <th>Email</th>
                            <th>School Year</th>
                            <th>Ação</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for student in students %}
                            <tr>
                                <td>
                                    <div class="table-imgname">
                                        <span style="background-image:url({{ student.avatar_url }})"></span>
                                        {{ student.name }}
                                    </div>
                                </td>
                                <td>{{ student.email}}</td>
                                <td>{{ student.schoolYear }}</td>
                                <td><a href="/students/{{ student.id}}">VER</a></td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </section>
    </main>
{% endblock %}}