<div class="item">
    <h1>Avatar_url</h1>
    <input 
    type="url" 
    name="avatar_url" 
    placeholder="https://"
    value="{{ teacher.avatar_url }}">
</div>
<div class="item">
    <h1>Nome Completo</h1>
    <input 
    type="text" 
    name="name" 
    placeholder="Nome do Professor"
    value="{{ teacher.name }}">
</div>
<div class="item">
    <h1>Data de Nascimento</h1>
    <input 
    type="date" 
    name="birth_date"
    value="{{ teacher.birth_date }}">
</div>
<div class="item">
    <h1>Grau de Escolaridade</h1>
    <label for="education_level"></label>
    <select name="education_level" id="level" data-selected="Doutorado">
        <option value="Ensino Médio Completo" {% if teacher. education_level== "Ensino Médio Completo" %}selected{% endif %}>Ensino Médio Completo</option>
        <option value="Ensino Superior Completo"  {% if teacher.education_level == "Ensino Superior Completo" %}selected{% endif %}>Ensino Superior Completo</option>
        <option value="Mestrado"  {% if teacher.education_level == "Mestrado" %}selected{% endif %}>Mestrado</option>
        <option value="Doutorado"  {% if teacher.education_level == "Doutorado" %}selected{% endif %}>Doutorado</option>
    </select>
</div>
<div class="item">
    <h1>Tipo de aula</h1>
    <span>
        <input 
        type="radio" 
        name="class_type"
        id="presencial" 
        value="presencial" 
        {% if teacher.class_type == "presencial" %}
            checked
        {% endif %}
        >
        <label for="class_type">Presencial</label>
    </span>
    <span>
        <input 
        type="radio" 
        name="class_type"
        id="distancia" 
        value="distancia"
        {% if teacher.class_type == "distancia" %}
            checked
        {% endif %}
        >
        <label for="class_type">Distância</label>
    </span>
</div>
<div class="item">
    <h1>Acompanhamento</h1>
    <input 
    type="text" 
    name="subjects_taught" 
    placeholder="Serviços separado por virgula"
    value="{{ teacher.subjects_taught }}">
</div>
    <button type="submit">Salvar</button>