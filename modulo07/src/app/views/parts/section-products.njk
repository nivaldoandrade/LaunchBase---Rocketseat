{% macro products(name, products) %}

<section class="shop container">

    {% if name %}
    <h2>{{name}}</h2>
    {%endif%}

    <div class="items">
        {%for product in products%}
        <div class="product">
            <div 
                class="image"
                style="background-image: url('{{product.img if product.img else '//placehold.it/500x200?text=Produto sem imagem'}}')"
            ></div>

            <div class="price">            
                <p>{{product.formattedPrice}}</p>
                {%if product.old_price !== null and product.old_price != product.price%}
                <div class="old-price">{{ product.formattedOldPrice}}</div>
                {%endif%}
            </div>

            <h4>{{product.name}}</h4>

            <a href="/products/{{product.id}}" class="button">Ver Produto</a>
            
        </div>
        {%endfor%}
    </div>
</section>
{% endmacro %}