{% extends 'layout.njk' %}
{% import 'parts/cards.njk' as card %}

{% block content %}
    {% call card.render('Esqueceu a senha?', 'password container') %}
        <form action="/users/forgot-password" method="POST">
            <div class="fields">
                <div class="item">
                    <div>Email</div>
                    <div class="input">
                        <input 
                            type="email" 
                            name="email" 
                            placeholder="Digite o seu email"
                            value="{{ user.email }}"
                            onblur="Validate.apply(this, 'isEmail')"
                        >
                    </div>
                </div>
            </div>

            <button class="button">Recuperar senha</button>
        </form>
    {%endcall%}
{% endblock content %}