<div class="item">
    <div>Email</div>
    <div class="input">
        <input 
            type="email" 
            name="email" 
            placeholder="Digite o email"
            value="{{ user.email }}"
            onblur="Validate.apply(this, 'isEmail')"
        >
    </div>
</div>

<div class="item">
    <div>Senha</div>
    <div class="input">
        <input 
            type="password" 
            name="password" 
            placeholder="Digite a sua nova senha"
        >
    </div>
</div>

<div class="item">
    <div>Repita a Senha</div>
    <div class="input">
        <input 
            type="password" 
            name="passwordRepeat" 
            placeholder="Digite a sua senha novamente"
        >
    </div>
</div>