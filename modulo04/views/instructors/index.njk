{% extends "layout.njk" %}

{% block content %}
    <main>
        <section class="content">
            <div class="card table-container">
                <a class="button" href="/instructors/create">CREATE</a>
                <table width="100%">
                    <thead>
                        <tr>
                            <th>Instructor</th>
                            <th>Services</th>
                            <th>Ação</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for instructor in instructors %}
                            <tr>
                                <td>
                                    <div class="table-image">
                                        <span style="background-image: url({{ instructor.avatar_url }})"></span>
                                        {{ instructor.name }}
                                    </div>
                                </td>
                                <td> 
                                    {% for service in instructor.services %} 
                                        <span>{{ service }}</span> 
                                    {% endfor %}
                                </td>
                                
                                <td><a href="instructors/{{ instructor.id }}">Ver</a></td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </section>
   </main>
{% endblock %}